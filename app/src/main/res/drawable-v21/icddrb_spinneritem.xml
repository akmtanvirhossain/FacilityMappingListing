<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners 
                android:bottomLeftRadius="0.5dp"
                android:bottomRightRadius="0.5dp"
                android:topLeftRadius="0.5dp"
                android:topRightRadius="0.5dp" />
            <gradient android:angle="270" android:startColor="#D7D7D7" android:endColor="#D7D7D7" android:type="linear" />
        </shape>
        <color android:color="#69CB3F" />
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners 
                android:bottomLeftRadius="0.5dp"
                android:bottomRightRadius="0.5dp"
                android:topLeftRadius="0.5dp"
                android:topRightRadius="0.5dp" />
            <gradient android:angle="270" android:startColor="#F3F3F3" android:endColor="#F3F3F3" android:type="linear" />
            <stroke android:color="#D7D7D7" android:width="@dimen/button_line_width"/>
        </shape>
        <color android:color="#69CB3F" />

    </item>
</selector>